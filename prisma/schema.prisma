generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  lastName  String
  email     String
  about     String
}

model Images {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  imageUrl  String
}

model EventDiaDeLosMuertos {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl  String
}


model PastEvents {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title String
    date DateTime?
    location String
    description String
    link String?
    imageUrl  String
}